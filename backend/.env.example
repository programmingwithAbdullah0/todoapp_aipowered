# Backend Environment Variables Template
# Copy this file to .env and fill in your values

# Database Configuration
DATABASE_URL=sqlite:///./test.db
DB_ECHO=False

# JWT Configuration
SECRET_KEY=your-super-secret-test-key-change-in-production-please
JWT_EXPIRATION_DAYS=7

# Application Settings
APP_NAME=Todo Web Application
DEBUG=True
API_PREFIX=/api

# OAuth Configuration - GitHub
# Create OAuth App at: https://github.com/settings/developers
# Redirect URI: http://localhost:8000/api/auth/github/callback
GITHUB_CLIENT_ID=your_github_client_id_here
GITHUB_CLIENT_SECRET=your_github_client_secret_here

# OAuth Configuration - Google
# Create OAuth Client at: https://console.cloud.google.com/
# Authorized redirect URIs: http://localhost:8000/api/auth/google/callback
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# Frontend URL (for OAuth redirects and CORS)
FRONTEND_URL=http://localhost:3000

# AI Configuration
OPENROUTER_API_KEY=your-openrouter-api-key-here
